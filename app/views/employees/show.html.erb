<div>
  <h1><%= @employee.fullname%></h1>

  <ul>
    <li><%= @employee.fullname %></li>
    <li><%= @employee.phone_number %></li>
    <li><%= @employee.email %></li>
  </ul>


  <%= render "employees/update", company: @company, employee: @employee %>

  <%= link_to "Delete", company_employee_path(@company, @employee),
      data: {turbo_method: :delete, turbo_confirm: "Do you want to delete this employee?"}
    %>

</div>
