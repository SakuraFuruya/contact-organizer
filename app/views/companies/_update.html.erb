<div>
  <button class="btn btn-success" data-action="click->edit#displayForm"><i class="fa-solid fa-pen"></i>&nbsp; Update</button>
  <div data-edit-target="form" class="form-update d-none">
    <%= simple_form_for(company) do |f| %>
      <%= f.input :company_name, input_html:{placeholder: "Company Name"} %>
      <%= f.input :industry %>
      <%= f.input :address %>
      <%= f.button :submit, class: 'btn btn-info', value: 'Done' %>
    <% end %>
  </div>
</div>
