<div>
  <h1><%= @company.company_name%> information</h1>

  <ul>
    <li><%= @company.company_name %></li>
    <li><%= @company.industry %></li>
    <li><%= @company.address %></li>
  </ul>
</div>

<div>
  <%= link_to "employees", company_employees_path(@company) %>
</div>

<div>
  <%= render "companies/update", company: @company %>
</div>

<div>
  <%= link_to "Delete", company_path(@company),
      data: {turbo_method: :delete, turbo_confirm: "Do you want to delete this company?"}
    %>

</div>
